---
import { siteMetadata } from "@/config/siteMetadata";
import { navigation } from "@/config/navigation";
import MobileNav from "@/components/home/mobile-nav";
import ThemeSwitch from "@/components/home/theme-switch.astro";
import SearchButton from "../search/search-button";
import LogoHeader from "@/components/home/logo-header";
---

<header class="flex items-center justify-between py-10">
  <div>
    <a href="/" aria-label={siteMetadata.headerTitle} data-astro-reload>
      <LogoHeader client:only="react" />
    </a>
  </div>
  <div class="flex items-center space-x-4 leading-5 sm:space-x-6">
    {
      navigation
        .filter((link) => link.href !== "/")
        .map((link) => (
          <a
            href={link.href}
            class="hidden font-medium text-gray-900 dark:text-gray-100 sm:block"
          >
            {link.title}
          </a>
        ))
    }
    <div class="flex items-center space-x-2">
      <SearchButton client:only="react" />
      <ThemeSwitch />
      <MobileNav client:only="react" />
    </div>
  </div>
</header>

<style>
  .animate-fade-in {
    animation: fadeIn 1s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

---
import Image from "@/components/ui/image.astro";

interface Props {
  title: string;
  description: string;
  imgSrc?: string;
  github?: string;
  link?: string;
  blog?: string;
  technologies?: string[];
}

const { title, description, imgSrc, github, link, blog, technologies } =
  Astro.props;
const primaryLink = link || github || blog;
---

<div
  class="group flex h-full flex-col overflow-hidden rounded-xl border border-border bg-card shadow-sm transition-all duration-300"
>
  <div class="relative h-48 overflow-hidden">
    <Image
      alt={title}
      src={imgSrc ?? ""}
      className="h-full w-full object-cover object-center transition-transform duration-500 group-hover:scale-110"
      width={544}
      height={306}
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
    >
    </div>
  </div>
  <div class="flex flex-1 flex-col">
    <div class="flex flex-1 flex-col p-6 pb-8">
      <div class="mb-6">
        <h2 class="mb-3 text-xl font-bold leading-8 tracking-tight">
          {
            primaryLink ? (
              <a
                href={primaryLink}
                aria-label={`Link to ${title}`}
                class="text-foreground transition-colors duration-300 hover:text-violet-600 dark:hover:text-violet-400"
              >
                {title}
              </a>
            ) : (
              title
            )
          }
        </h2>
        <div
          class="mb-4 h-1 w-20 rounded-full bg-violet-600 transition-all duration-300 group-hover:w-32 dark:bg-violet-500"
        >
        </div>
        <p class="prose prose-sm text-muted-foreground">
          {description}
        </p>
      </div>

      <div class="flex-1 space-y-6">
        {
          technologies && technologies.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {technologies.map((techno) => (
                <span class="inline-flex items-center gap-1 rounded-md border border-border bg-muted px-2 py-0.5 text-xs font-medium text-muted-foreground">
                  <span class="font-mono text-[10px] text-foreground/30">
                    #
                  </span>
                  <span>{techno.split(" ").join("-")}</span>
                </span>
              ))}
            </div>
          )
        }
      </div>
    </div>
    <div
      class="mt-auto flex flex-wrap gap-2 border-t border-border bg-muted/40 px-6 py-4"
    >
      {
        github && (
          <a
            href={github}
            class="group inline-flex h-8 items-center justify-center rounded-md border border-border bg-background px-3 text-xs font-medium text-foreground transition-all duration-200 hover:bg-foreground hover:text-background"
            aria-label={`GitHub repository for ${title}`}
          >
            <svg class="mr-1.5 h-3.5 w-3.5 fill-current" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            GitHub
          </a>
        )
      }
      {
        link && (
          <a
            href={link}
            class="group inline-flex h-8 items-center justify-center rounded-md border border-border bg-background px-3 text-xs font-medium text-foreground transition-all duration-200 hover:bg-foreground hover:text-background"
            aria-label={`Live demo for ${title}`}
          >
            <svg
              class="mr-1.5 h-3.5 w-3.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              />
            </svg>
            Visit Project
          </a>
        )
      }
      {
        blog && (
          <a
            href={blog}
            class="group inline-flex h-8 items-center justify-center rounded-md border border-border bg-background px-3 text-xs font-medium text-foreground transition-all duration-200 hover:bg-foreground hover:text-background"
            aria-label={`Blog post about ${title}`}
          >
            <svg
              class="mr-1.5 h-3.5 w-3.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            Blog
          </a>
        )
      }
    </div>
  </div>
</div>

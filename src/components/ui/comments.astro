---
interface Props {
  slug: string;
  x?: boolean;
}

const { slug, x } = Astro.props;
---

<div class="pb-6 pt-6 text-center text-muted-foreground">
  <p class="text-sm">
    Comments are disabled for now.
    {
      x && (
        <a
          href={`https://mobile.twitter.com/search?q=${encodeURIComponent(`https://hmzelidrissi.ma/${slug}`)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="text-violet-600 transition-colors hover:text-violet-700 dark:text-violet-400 dark:hover:text-violet-300"
        >
          Discuss on Twitter
        </a>
      )
    }
  </p>
</div>

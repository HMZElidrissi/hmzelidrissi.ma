---
interface Props {
  text: string;
  className?: string;
}

const { text, className = "" } = Astro.props;
---

<a
  href={`/tags/${text.toLowerCase().replace(/\s+/g, "-")}`}
  class={`group inline-flex items-center gap-1 rounded-md border border-border bg-muted px-2 py-0.5
  text-xs font-medium text-muted-foreground transition-colors duration-150
  hover:border-foreground/30 hover:bg-accent hover:text-foreground ${className}`}
>
  <span class="font-mono text-[10px] text-foreground/30">#</span>
  <span>{text.split(" ").join("-")}</span>
</a>

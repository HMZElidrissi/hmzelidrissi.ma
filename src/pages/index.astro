---
import Main from "@/components/home/main";
import SEO from "@/components/seo/index.astro";
import Schema from "@/components/structured-data/index.astro";
import RootLayout from "@/layouts/RootLayout.astro";

type Tuple<T> = [T, T];
const colors: Tuple<string>[] = [
  ["#F5E1FF", "#CAF0F8"],
  ["#EAF4F4", "#FFEDD8"],
  ["#EDF8FF", "#EDE9F6"],
  ["#EEEBFF", "#FFFAD4"],
];
const random = Math.round(Math.random() * (colors.length - 1));
const [aboutColor, contactColor] = colors[random] ?? colors[0]!;
---

<RootLayout>
  <SEO slot="seo" />
  <Schema slot="ld+json" type="WebSite" />
  <Main
    client:only="react"
    aboutColor={aboutColor}
    contactColor={contactColor}
  />
</RootLayout>
